{% extends 'base.html.twig' %}

{% block title %}E-market Account
{% endblock %}

{% block body %}

	<div class="row">
		<div class="col-sm-4 col-sm-offset-4 justify center rounded-container">

			<div
				class="login-form">
				<!--login form-->
				<h2>Login to your account</h2>
				<form action="{{path('user_login')}}" method="POST">
					<label>
						Username
					</label>
					<input type="text" name="_username" id="username" placeholder="Enter the username" required/>
					<label>
						Password
					</label>
					<input type="password" name="_password" id="password " placeholder="Enter the password" required/>
					<hr>
					<span>
						<input type="checkbox" id="remember_me" name="_remember_me"/>
						Remember me!</span>
					<p>
						Don't have an account?
						<a href="{{path('user_register')}}">
							Register</a>
					</p>

					<button type="submit" class="btn btn-default">Login</button>
				</form>
			</div>
			<!--/login form-->
		</div>
	</div>

{% endblock %}
