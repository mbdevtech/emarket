{% extends 'base.html.twig' %}

{% block title %}Hello HomeController!
{% endblock %}

{% block body %}
	<section>
		<div class="container">
			<div class="row">
				{% include "home/leftsidebar.html.twig" %}
				<div class="col-sm-9 padding-right">
					<div class="row">
						<div
							class="product-details">
							<!--product-details-->
							{% for p in product %}
								<div class="col-sm-6">
									<div class="view-product">
										<img src='{{ p.path }}' alt=""/>
									</div>

								</div>
								<div class="col-sm-6">
									<div class="product-information ">
										<img src="{{path('home')}}images/product-details/new.jpg" class="newarrival" alt=""/>
										<h2>{{p.name}}</h2>
										<p>Web ID: 1089772</p>
										Clients Rating :
										{% for i in 1..5 %}
											{% if i <= avg_rate %}
												<i class="fa fa-star"></i>
											{% else %}
												{% if ((2*i-1)/2 <= avg_rate) and (avg_rate < i) %}
													<i class="fa fa-star-half-o"></i>
												{% else %}
													<i class="fa fa-star-o"></i>
												{% endif %}
											{% endif %}
										{% endfor %}
										{% if (avg_rate < 0.5) %}
											0/5
										{% endif %}
										{% if (avg_rate >= 0.5 and avg_rate<1) %}
											0.5/5
										{% endif %}
										{% if (avg_rate >= 1 and avg_rate<1.5) %}
											1/5
										{% endif %}
										{% if (avg_rate >= 1.5 and avg_rate<2) %}
											1.5/5
										{% endif %}
										{% if (avg_rate >= 2 and avg_rate<2.5) %}
											2/5
										{% endif %}
										{% if (avg_rate >= 2.5 and avg_rate<3) %}
											2.5/5
										{% endif %}
										{% if (avg_rate >= 3 and avg_rate<3.5) %}
											3/5
										{% endif %}
										{% if (avg_rate >= 3.5 and avg_rate<4) %}
											3.5/5
										{% endif %}
										{% if (avg_rate >= 4 and avg_rate<4.5) %}
											4/5
										{% endif %}
										{% if (avg_rate >= 4.5 and avg_rate<5) %}
											4.5/5
										{% endif %}
										{% if (avg_rate >= 5) %}
											5/5
										{% endif %}

										<div>
											<h3>US ${{p.price}}</h3>
											<label>Quantity In Stock:
												{{p.quantity}}</label>
											<p>
												<b>Condition:
												</b>New</p>
											<p>
												<b>Brand:
													{{p.brand}}</b>
											</p>
											<br>
										</div>
										<a href="/" type="button" class="btn btn-primary " style="width:100%">
											<i class="fa fa-shopping-cart"></i>
											Buy it now
										</a>
										<a href="{{path('cart_add',{'id': p.id})}}" type="button" class="btn btn-primary " style="width:100%">
											<i class="fa fa-shopping-cart"></i>
											Add to cart
										</a>
										<a type="button" class="btn btn-primary " style="width:100%">
											<i class="fa fa-shopping-cart"></i>
											Add to wishlist
										</a>
									</div>
									<!--/product-detail-->
								</div>
							{% endfor %}
						</div>
						<div class="row">
							{% if (category !=0 )%}
								<h2>
									Similar Items</h2>
							{% else %}
								<h2>
									Other Items</h2>
							{% endif %}
							<div
								id="similar-product" class="carousel slide" data-ride="carousel">
								<!-- Wrapper for slides -->
								<div class="carousel-inner">
									{% if similar|length <= 3  %}
										{# till 6 items #}
										<div class="item active">
											{% for item in similar %}
												<div class="col-sm-4">
													<a href="{{path('product_detail',{'id': category, 'index':item.id})}}">
														<h4 class="text-center">{{ item.name }}</h4>
														<br>
														{%  set image = item.path %}
														<img src="{{item.path}}" alt={{ item.name }}>
													</img>
												</a>
											</div>
										{% endfor %}
									</div>
								{% else %}
									{% set modulo = similar|length % 3 %}
									{% set grpNb = ((similar|length) - modulo)/3 %}
									<div
										class="item active">
										{# first three items active #}
										{% for i in [0,1,2] %}
											<div class="col-sm-4">
												<a href="{{path('product_detail',{'id': category, 'index':similar[i].id})}}">
													<h4 class="text-center">{{ similar[i].name }}</h4>
													<br>
													<img src="{{similar[i].path}}" alt={{ similar[i].name }}>
												</img>
											</a>
										</div>
									{% endfor %}
								</div>
								{# other items grouped by 3 #}
								{% for i in 1..grpNb-1  %}
									<div class="item">
										{% for j in [0,1,2] %}
											<div class="col-sm-4">
												<a href="{{path('product_detail',{'id': category, 'index':similar[3*i+j].id})}}">
													<h4 class="text-center">{{ similar[i*3+j].name }}</h4>
													<br>
													<img src="{{similar[i*3+j].path}}" alt={{ similar[i*3+j].name }}>
												</img>
											</a>
										</div>
									{% endfor %}
								</div>
							{% endfor %}
							{# Modulo part #}
							<div class="item">
								{% for item in similar[grpNb*3:]  %}
									<div class="col-sm-4">
										<a href="{{path('product_detail',{'id': category, 'index':item.id})}}">
											<h4 class="text-center">{{ item.name }}</h4>
											<br>
											<img src="{{item.path}}" alt={{ item.name }}></img>
									</a>
								</div>
							{% endfor %}
						</div>
					{% endif %}
				</div>
				<!-- Controls -->
				<a class="left item-control" href="#similar-product" data-slide="prev">
					<i class="fa fa-angle-left"></i>
				</a>
				<a class="right item-control" href="#similar-product" data-slide="next">
					<i class="fa fa-angle-right"></i>
				</a>
			</div>
		</div>
		<br>
	</div>
	<!--/product-details-->
	<div class="row">
		<div
			class="category-tab shop-details-tab">
			<!--category-tab-->
			<div class="col-sm-12">
				<ul class="nav nav-tabs">
					<li>
						<a href="#details" data-toggle="tab">product Details</a>
					</li>
					<li class="active">
						<a href="#reviews" data-toggle="tab">Product Reviews ({{reviews|length}})</a>
					</li>
				</ul>
			</div>
			<div class="tab-content">
				<div class="tab-pane fade" id="details">
					<p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.Ut enim ad minim veniam, quis nostrud exercitation ullamco laboris nisi ut aliquip ex ea commodo consequat.Duis aute irure dolor in reprehenderit in voluptate velit esse cillum dolore eu fugiat nulla pariatur.</p>
				</div>
				<div class="tab-pane fade active in" id="reviews">
					<div class="col-sm-12">
						<div class="reviews">
							{% for r in reviews %}
								<ul>
									<li>
										<a href="">
											<i class="fa fa-user"></i>
											{{r.full_name}}</a>
									</li>
									<li>
										<a href="">
											<i class="fa fa-clock-o"></i>
											{{r.edited_at}}</a>
									</li>
									<li>
										{% for i in 1..5 %}
											{% if i <= r.rate %}
												<i class="fa fa-star"></i>
											{% else %}
												<i class="fa fa-star-o"></i>
											{% endif %}
										{% endfor %}
										{{r.rate}}/5
									</li>
								</ul>
								<p>{{r.content}}</p>
								<br>
							{% endfor %}
						</div>
						{# We cannot make a review if not connected #}
						{% if app.user %}
							<p>
								<b>Write Your Review</b>
							</p>
							<form action="{{path('user_review_new',{user_id: app.user.id, prod_id:product[0].id})}}" method="POST">
								<textarea name="content"></textarea>
								<div class="rating">
									<b>Give a rating :
									</b>
									<i id="star-1" class="fa fa-star-o" onclick="change(0)" aria-hidden="true"></i>
									<i id="star-2" class="fa fa-star-o" onclick="change(1)" aria-hidden="true"></i>
									<i id="star-3" class="fa fa-star-o" onclick="change(2)" aria-hidden="true"></i>
									<i id="star-4" class="fa fa-star-o" onclick="change(3)" aria-hidden="true"></i>
									<i id="star-5" class="fa fa-star-o" onclick="change(4)" aria-hidden="true"></i>
									<b class="rating__result" id="result" name="result"></b>
									<input type="text" id="rate" name="rate" hidden></input>
							</div>
							<button type="submit" class="btn btn-default pull-right">
								Submit
							</button>
						</form>
					{% else %}
						<p>
							<b>
								<small>If you want to add a review
									<a href="{{path('user_login')}}">Login</a>
								</b>
							</small>
						</p>
					{% endif %}
				</div>
			</div>

		</div>
	</div>
	<!--/category-tab-->
</div></div></div></div></section><script type="text/javascript">const ratingResult = x = document.getElementById("result");
printRatingResult(ratingResult);
